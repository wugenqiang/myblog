.header{
  width: 80%;
  +tablet() {
    width: 100%;
  }
  +mobile() {
    width: 100%;
  }
}
.container .main-inner {
  width: 80%;
  +tablet() {
    width: 100%;
  }
  +mobile() {
    width: 100%;
  }
}
.content-wrap {
  width: calc(100% - 260px);
  +tablet() {
    width: 100%;
  }
  +mobile() {
    width: 100%;
  }
}

