.pagination {
  margin: 1em 0 0;
  text-align: center;

  .prev, .next, .page-number {
    display: inline-block;
    margin: 0 0.5em;
    width: 2.5em;
    height: 2.5em;
    line-height: 2.5;
    border: 0;
    border-radius: 100%
    background: white;
    transition-property: background;
    the-transition();
    &:hover {
      color: $pagination-active-color;
      background: $pagination-active-bg;
    }
  }

  .space {
  }

  .prev { margin-left: 0; }
  .next { margin-right: 0; }

  .page-number.current {
    color: $pagination-active-color;
    background: $pagination-active-bg;
  }
}

+mobile() {
  .pagination { 
    .prev, .next, .page-number {
      width: 2em;
      height: 2em;
      line-height: 2;
    }
  }
}
