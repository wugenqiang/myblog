.posts-expand .post-title {
  word-wrap();
  font-weight: $posts-expand-title-font-weight;
  font-size: 1.7em;
  line-height: 1.7;
  padding: 20px 20px 10px;
  margin: 0;
}

.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $color-11;
  border-bottom: none;
  line-height: inherit;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: $color-11;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }

  .fa {
    font-size: 20px;
    margin-left: 5px;
  }
}
