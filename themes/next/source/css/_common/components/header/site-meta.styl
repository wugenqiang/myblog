.site-brand-wrapper {
  position: relative;
}
.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;
  padding: 20px 0;
  color: white;
  background: $color-12;

  +mobile() { text-align: center; }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0;
  color: $brand-color;
  background: none;
  border-bottom: none;

  &:hover {
    color: white;
  }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: $logo-font-size;
  font-weight: normal;
  font-family: $logo-font-family;
  color: white;
}

.custom-logo-image {
  margin-top: 20px;
  +tablet-mobile() {
    hide();
  }
}

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
